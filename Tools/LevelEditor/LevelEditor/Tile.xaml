<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelEditor" x:Class="LevelEditor.Tile" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<local:TransformConverter x:Key="TransformConverter"/>
	</UserControl.Resources>
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.RowDefinitions>
        	<RowDefinition Height="Auto"/>
        	<RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Name, FallbackValue=Name}" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Border BorderThickness="3" CornerRadius="3" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
        	<Image Source="{Binding Image, FallbackValue=wall.png}" RenderTransform="{Binding Orientation, Converter={StaticResource TransformConverter}}" RenderTransformOrigin="0.5,0.5"/>
        </Border>
    </Grid>
</UserControl>
